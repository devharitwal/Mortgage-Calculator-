        xmlns:local="clr-namespace:TestWPF"
        mc:Ignorable="d"
        Title='JP MORGAN X CHASE' Height="450" Width="800"
		
		 ResizeMode="NoResize"
		>
	<Grid Margin="78,23,53,11">
		<Grid.RowDefinitions>
			<RowDefinition Height='79*'/>
			<RowDefinition Height='22*'/>
			<RowDefinition Height='89*'/>
			<RowDefinition Height='209*'/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="24*"/>
		</Grid.ColumnDefinitions>

		<Label Content="JP MORGAN &amp; CHASE " HorizontalAlignment="Left" Margin="185,32,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.073,-0.49" Height="41" Width="240" Grid.Column="1" FontSize='18' FontWeight='Bold'/>
		<Label Content="Mortgage Amount " HorizontalAlignment="Left" Margin="113,34,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.073,-0.49" Height="34" Width="147" Grid.Column="1" Grid.Row='2'/>
		<Label Content="Interest % " HorizontalAlignment="Left" Margin="113,75,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.073,-0.49" Height="34" Width="146" Grid.Column="1" Grid.RowSpan='2' Grid.Row='2'/>
